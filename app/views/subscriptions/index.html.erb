<h1 class="p-left-5 p-top-5">Bonjour, <%= current_user.first_name %>  </h1>

<p class="p-left-5"> Tu as <%= Subscription.count %> abonnements en cours </p>

<% @subscriptions.each do |subscription| %>
  <div class="card-product">
    <div>
      <% case subscription.category %>
      <% when 'Energie'%>
        <%= image_tag 'energie.png' %>
      <% when 'Loisirs'%>
        <%= image_tag 'loisirs.png' %>
      <% when 'Telecom'%>
        <%= image_tag 'telecom.png' %>
      <% when 'Streaming' %>
        <%= image_tag 'streaming.png' %>
      <% when 'Divers'%>
        <%= image_tag 'divers.png' %>
      <% end %>
    </div>
    <div class="card-product-infos">
      <div>
        <h2> <%= subscription.name %> </h2>
        <p> <%= subscription.status %>  </p>
        <p> <i class="fab fa-algolia"></i> <%= subscription.limit_date %>  </p>
      </div>
      <div>
        <%= subscription.price %>
      </div>
    </div>

  </div>
<% end %>

