<div class=container>
  <div class="banner-subscription">
    <h1> <%= @subscription.name %></h1>
  <div>
    <div>
       <% case @subscription.category %>
      <% when 'Energie'%>
        <%= image_tag 'energie_banner.png' %>
      <% when 'Loisirs'%>
        <%= image_tag 'loisirs_banner.png' %>
      <% when 'Telecom'%>
        <%= image_tag 'telecom_banner.png' %>
      <% when 'Streaming' %>
        <%= image_tag 'streaming_banner.png' %>
      <% when 'Divers'%>
        <%= image_tag 'divers_banner.png' %>
      <% end %>
    </div>
    </div>
      <% case @subscription.category %>
      <% when 'Energie'%>
        <%= image_tag 'energie_rond.png' %>
      <% when 'Loisirs'%>
        <%= image_tag 'loisirs_rond.png' %>
      <% when 'Telecom'%>
        <%= image_tag 'telecom_rond.png' %>
      <% when 'Streaming' %>
        <%= image_tag 'streaming_rond.png' %>
      <% when 'Divers'%>
        <%= image_tag 'divers_rond.png' %>
      <% end %>
    </div>
    <div>
      <%= @subscription.category %>
    </div>
    <p> <%= current_user.first_name %>, voici le détail de votre souscription : <%= @subscription.name %></p>
    <div>
      <%= @subscription.price %> € / <%= @subscription.periodicity = "mensuel"  ? "Mois" : "An" %>
    </div>
   <div>
      <% @subscription.status = "en cours"  ? "<i class="fas fa-play"></i>" : "<i class="fas fa-pause"></i>" %>
    </div>
    <div>
      <%= @subscription.status %>
    </div>
    <div>
      <i class="far fa-calendar-times"></i>
    </div>
    <div>
      du <%= @subscription.start_date %> au <%= @subscription.end_date %>
    </div>
    <div>
      <i class="fal fa-traffic-light-stop"></i>
    </div>
    <div>
      Date limite pour mettre fin à votre abonnement : <%= Subscription.limit_date %>
    </div>

 <a href="#">Aidez-moi à annuler mon abonnement</a> <!--  -->



</div>
