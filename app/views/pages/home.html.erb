<div class="container">
  <div id="typed-strings">
    <h1>Hello <%= current_user.first_name %> !</h1>
  </div>
  <span id="typed" class="<%= "animation-typed-js-1" if @animation %>"></span>
  <div id="typed-strings-two">
    <p>Tu as <span><%= @subscriptions.length %></span> abonnements en cours et tu as économisé <span>600€</span> depuis que tu utilises Resilio <i class="far fa-smile"></i></p>
  </div>
  <span id="typed-two" class="<%= "animation-typed-js-2" if @animation %>"></span>

  <div class="row mt-5">
    <div class="col">
      <%= link_to transactions_path, class: "home-link" do %>
      <div id="box-one" class="home-box <%= "animation" if @animation %> d-flex align-items-center">
        <p>Synchroniser mes comptes</p>
      </div>
      <% end %>
    </div>
    <div class="col">
      <%= link_to subscriptions_path(search: "expired"), class: "home-link" do %>
        <div id="box-two" class="home-box <%= "animation" if @animation %> d-flex align-items-center">
          <p>Abonnements à surveiller</p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div id="box-three" class="home-box <%= "animation" if @animation %> d-flex align-items-center">
        <p>Résiliations en cours</p>
     </div>
    </div>
    <div class="col">
      <div id="box-four" class="home-box <%= "animation" if @animation %> d-flex align-items-center">
        <p>Opportunités du moment</p>
      </div>
    </div>
  </div>
</div>
